= render "shared/form_errors", obj: task

= simple_form_for ["account", task], html: { class: "form-horizontal" } do |f|
  = f.input :name, autofocus: true
  = f.input :description
  - if current_user.admin?
    = f.association :user
  = f.simple_fields_for :attachment, task.build_attachment do |a|
    = a.input :file

  = f.button :submit, "Save", class: "btn-primary"
